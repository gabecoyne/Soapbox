<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => "devise" }) do |f| %>
	<h2>Forgot your password?</h2>
  <%= devise_error_messages! %>

  <p><%= f.label :email %><br />
  <%= f.text_field :email %></p>

  <p><%= f.submit "Send reset instructions", :class => "submit" %></p>

	<%= render :partial => "devise/shared/links" %>
<% end %>
