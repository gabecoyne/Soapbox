<h1><%%= @<%= singular_name %>.<%= attributes.first.name %> %></h1>

<% attributes.each do |attribute| -%>
<div>
  <h3><%= attribute.name.titleize %></h3>
  <%%= @<%= singular_name %>.<%= attribute.name %> %>
</div>
<% end %>

<h2>Other <%= plural_name.capitalize %></h2>
<ul id="<%= plural_name %>">
  <%% <%= singular_name.camelize %>.all.each do |<%= singular_name %>| %>
    <li>
      <%%= link_to <%= singular_name %>.<%= attributes.first.name %>, <%= singular_name %>_url(<%= singular_name %>) %>
    </li>
  <%% end %>
</ul>